npm init
npm install -D typescript
npm install zeromq
npm install -D @types/zeromq
tsc --init

modify tsconfig.json
"outDir": "./build",  

modify package.json	 
"scripts": {
    "tsc": "tsc",
    "serve": "node build/server.js",
    "build": "npm run tsc && npm run serve",
    "test": "echo \"Error: no test specified\" && exit 1"
},
  


npm install
npm run build  

